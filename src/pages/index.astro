import "@/styles/global.css";
const API_URL = 'https://seoscribe.frank-couchman.workers.dev';
---

<astro:head>
  <!-- Primary head/meta -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  <title>Article Writer, AI Writer & Writing Tool | Long-Form SEO Content ‚Äì SEOScribe</title>

  <!-- Primary SEO -->
  <meta name="description" content="SEOScribe is the long-form article writer and AI writer built for SEO. Create 2,000‚Äì6,000 word articles with citations, hero images, A/B titles, FAQs, and social posts. Free article writer demo (1/day). The writing tool teams use to rank." />
